{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "images/sms.png",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Zalo Message",
      "description": "Zalo Message"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "emailAddress": "{{InteractionDefaults.Email}}"
        },
        {
          "phoneNumber": "{{Contact.Default.PhoneNumber}}"
        }
      ],
      "outArguments": [
        {
          "foundSignupDate": ""
        }
      ],
      "url": "https://zalo-call-back.herokuapp.com/v46.0/marketing-cloud/zalo/sendMessage"
    }
  },
  "configurationArguments": {
    "save": {
      "url": "URI/for/your/activity/save"
    },
    "publish": {
      "url": "URI/for/your/activity/publish"
    },
    "validate": {
      "url": "URI/for/your/activity/validate"
    },
    "stop": {
      "url": "URI/for/your/activity/stop"
    }
  },
  "wizardSteps": [
    { "label": "Setup Zalo OA channel", "key": "step1" }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 200,
      "width": 300,
      "fullscreen": true
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "phoneNumber": {
              "dataType": "Phone",
              "isNullable": false,
              "direction": "in"
            }
          },
          {
            "emailAddress": {
              "dataType": "Email",
              "isNullable": false,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "foundSignupDate": {
              "dataType": "Date",
              "direction": "out",
              "access": "visible"
            }
          }
        ]
      }
    }
  }
}